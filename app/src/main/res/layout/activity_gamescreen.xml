<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gamescreen_darkbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/color_gamescreen_background"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progressdrawable"
                android:minHeight="15dip"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/soundIconView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:layout_alignParentLeft="true"
                android:foregroundGravity="center"
                android:tint="@color/color_options"
                android:src="@drawable/ic_volume_up_black_24dp">
            </ImageView>
            <TextView
                android:paddingRight="10dp"
                android:id="@+id/totalScoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:textColor="@color/color_options"
                android:textSize="50dp"
                android:text="0"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="QUESTION"
            android:textColor="@color/color_options"
            android:gravity="bottom|center"
            android:letterSpacing=".5"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="30sp"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#1de8b3"
            android:gravity="center"
            android:letterSpacing=".5"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="30sp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4.5"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:weightSum="2">
                <Button
                    android:id="@+id/firstChoice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:letterSpacing=".5"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="14sp"
                    style="@style/MenuPlayButton"
                    android:layout_margin="7dp"
                    android:text="QUESTION"/>
                <Button
                    android:id="@+id/secondChoice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:letterSpacing=".5"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="14sp"
                    android:layout_margin="7dp"
                    style="@style/MenuPlayButton"
                    android:text="QUESTION"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7">
                <Button
                    android:id="@+id/thirdChoice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:letterSpacing=".5"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="14sp"
                    android:layout_margin="7dp"
                    style="@style/MenuPlayButton"
                    android:text="QUESTION"/>
                <Button
                    android:id="@+id/fourthChoice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:letterSpacing=".5"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="14sp"
                    android:layout_margin="7dp"
                    style="@style/MenuPlayButton"
                    android:text="QUESTION"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>